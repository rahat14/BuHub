<?xml version="1.0" encoding="utf-8"?>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#ffff"
            >

    <androidx.appcompat.widget.Toolbar
        android:elevation="8dp"
        android:background="#ffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="vertical"
            android:theme="@style/ThemeOverlay.AppCompat.Dark">

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/backBtnAdd"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/backword_sign"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:textStyle="normal"
                    android:textSize="18sp"
                    android:textColor="#D0CECE"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Request For Blood"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>

        </LinearLayout>




    </androidx.appcompat.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Blood For"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"/>

    <EditText

        android:id="@+id/name_add"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:background="@drawable/gray_back"
        android:hint="Friend"
        android:textColorHint="@color/white"
        android:textColor="#000000"

        android:textSize="16sp"
        android:paddingStart="10dp"
        android:gravity="start|center_vertical"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"/>
    <TextView
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time Preference"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/timeEdit"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_outline"
            android:drawableLeft="@drawable/time_icon"
            android:drawablePadding="10dp"
            android:hint="00:00"
            android:textColorHint="@color/reGrad"
            android:gravity="start|center"
            android:textSize="15sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            />


        <TextView
            android:layout_marginEnd="20dp"
            android:id="@+id/dateEdit"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textColorHint="@color/reGrad"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_outline"
            android:drawableStart="@drawable/date_icon"
            android:drawablePadding="10dp"
            android:gravity="center|start"
            android:textSize="15sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:hint="dd/mm/yyyy"
            android:padding="10dp" />

    </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/progresssbar"
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:progressTint="#E40B27"
                android:visibility="visible"
                tools:visibility="visible" />


        </FrameLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location Preference"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"/>

    <EditText
        android:id="@+id/loc"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:background="@drawable/gray_back"
        android:hint="Cumilla"
        android:textSize="16dp"
        android:textColorHint="@color/white"
        android:layout_gravity="center"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:gravity="left|center_vertical"
        android:layout_marginTop="15dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Blood Group"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"/>




        <LinearLayout
          android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_marginBottom="8dp"
                android:id="@+id/bldGroupIdApos"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/trns_back"
                android:text="A+"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:textStyle="normal"
                android:textSize="18sp"
                android:textColor="#D0CECE"
                />
            <Button
                android:id="@+id/bldGroupIdAmin"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/trns_back"
                android:text="A-"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:textStyle="normal"
                android:textSize="18sp"
                android:textColor="#D0CECE"/>
            <Button
                android:id="@+id/bldGroupIdBpos"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/trns_back"
                android:text="B+"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:textStyle="normal"
                android:textSize="18sp"
                android:textColor="#D0CECE"/>
            <Button
                android:id="@+id/bldGroupIdBmin"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/trns_back"
                android:text="B-"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:textStyle="normal"
                android:textSize="18sp"
                android:textColor="#D0CECE"/>
            <Button
                android:id="@+id/bldGroupIdOpos"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/trns_back"
                android:text="O+"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:textStyle="normal"
                android:textSize="18sp"
                android:textColor="#D0CECE"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/bldGroupIdOmin"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/trns_back"
                android:text="O-"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:textStyle="normal"
                android:textSize="18sp"
                android:textColor="#D0CECE"/>

            <Button
                android:id="@+id/bldGroupIdABpos"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/trns_back"
                android:text="AB+"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:textStyle="normal"
                android:textSize="18sp"
                android:textColor="#D0CECE"/>
            <Button
                android:id="@+id/bldGroupIdABmin"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/trns_back"
                android:text="AB-"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:textStyle="normal"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                android:textColor="#D0CECE"/>


        </LinearLayout>


        <Button
            android:id="@+id/submitBtn"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/gradient_back"
            android:gravity="center"
            android:text="Submit"
            android:textColor="#ffffff"
            android:textStyle="bold" />

    </LinearLayout>
    </ScrollView>

</LinearLayout>

