<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#303030">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="202dp"
            >




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"

                android:layout_alignParentStart="true"

                android:background="@drawable/profilebackgorund"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="EDIT PROFILE"
                    android:fontFamily="@font/mon_bold"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_marginTop="20dp"
                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_profile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:src="@drawable/plaementpro" />


                <TextView
                    android:id="@+id/profile_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Mr. X"
                    android:fontFamily="@font/mon_bold"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="#b7b7b7"
                    android:textColor="#fff"
                    android:textSize="23sp"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold" />


            </LinearLayout>


        </RelativeLayout>

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >



        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center_horizontal"



            >
            <LinearLayout

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="#00BCD4"
                    android:textSize="16sp"
                    android:fontFamily="@font/mon_bold"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="rahatshovo56565@gmail.com"
                    android:textColor="#ffff"
                    android:paddingLeft="8dp"
                    android:backgroundTint="@color/editTextColor"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textSize="17dp"
                    android:drawableRight="@drawable/ic_clear_gray"
                    android:id="@+id/mail_profile"
                    android:layout_gravity="center_vertical"/>


            </LinearLayout>
            <LinearLayout

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact"
                    android:textColor="#00BCD4"
                    android:textSize="16sp"
                    android:fontFamily="@font/mon_bold"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="01700000"
                    android:id="@+id/phoneNumberProfile"
                    android:textColor="#ffff"
                    android:backgroundTint="@color/editTextColor"
                    android:paddingLeft="8dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:drawableRight="@drawable/ic_clear_gray"
                    android:textSize="17dp"
                    android:layout_gravity="center_vertical"/>


            </LinearLayout>
            <LinearLayout

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Department"
                    android:textColor="#00BCD4"
                    android:textSize="16sp"
                    android:visibility="gone"
                    android:fontFamily="@font/mon_bold"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CSE"
                    android:textColor="#ffff"
                    android:paddingLeft="8dp"
                    android:visibility="gone"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@color/editTextColor"
                    android:textSize="17dp"


                    android:layout_gravity="center_vertical"/>


            </LinearLayout>
            <LinearLayout

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="batch"
                    android:textColor="#00BCD4"
                    android:textSize="16sp"
                    android:fontFamily="@font/mon_bold"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="jjj"
                    android:id="@+id/batchNumEdit"
                    android:textColor="#ffff"
                    android:drawableRight="@drawable/ic_clear_gray"
                    android:paddingLeft="8dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@color/editTextColor"
                    android:textSize="17dp"

                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ex: Spring 18/ Fall 16"
                    android:textColor="@color/greyish"
                    android:textSize="14sp"

                    android:fontFamily="@font/mon_bold"
                    android:layout_marginLeft="40dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="20dp"/>


            </LinearLayout>
            <LinearLayout

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CGPA"
                    android:textColor="#00BCD4"
                    android:textSize="16sp"
                    android:fontFamily="@font/mon_bold"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3.00"
                    android:id="@+id/cgpaEditProfile"
                    android:textColor="#ffff"
                    android:paddingLeft="8dp"
                    android:backgroundTint="@color/editTextColor"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textSize="17dp"
                    android:drawableRight="@drawable/ic_clear_gray"
                    android:inputType="number"

                    android:layout_gravity="center_vertical"/>


            </LinearLayout>
            <LinearLayout

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blood Group"
                    android:textColor="#00BCD4"
                    android:textSize="16sp"
                    android:fontFamily="@font/mon_bold"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="B+"
                    android:textColor="#ffff"
                    android:id="@+id/bloodGroupEdit"
                    android:paddingLeft="8dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:drawableRight="@drawable/ic_clear_gray"
                    android:textSize="17dp"
                    android:backgroundTint="@color/editTextColor"
                    android:layout_gravity="center_vertical"/>


            </LinearLayout>


            <Button
                android:id="@+id/buttonSubmitProfile"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/profilebackgorund"
                android:text="Update"
                android:fontFamily="@font/mon_bold"
                android:textSize="18sp"
                android:textColor="#ffffff"
                android:foreground="?attr/selectableItemBackground"
                android:layout_marginBottom="20dp"
                />
        </LinearLayout>

    </ScrollView>


</LinearLayout>
