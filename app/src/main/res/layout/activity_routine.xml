<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RoutineActivity.RoutineActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Class Routine"
        android:id="@+id/classid"
        android:fontFamily="@font/mon_bold"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"/>

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/Class_Routine"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="350dp" />


        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/examID"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Exam Routine"
            android:fontFamily="@font/mon_bold"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <com.github.chrisbanes.photoview.PhotoView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:id="@+id/examRoutin"

             />
    </LinearLayout>
</ScrollView>