<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relatciveLayout"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="160dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/image"
                android:layout_marginTop="5dp"
                android:src="@drawable/pro_pic"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mr.XYZ"
                android:fontFamily="@font/mon_regular"
                android:layout_toEndOf="@id/image"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:textColor="#000"
                android:textSize="18sp"
                android:id="@+id/nameId"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Barura"
                android:layout_toEndOf="@id/image"
                android:fontFamily="@font/mon_regular"
                android:layout_marginTop="40dp"
                android:layout_marginStart="30dp"
                android:textColor="#8D8B8B"
                android:textSize="14sp"
                android:id="@+id/locationId"
                />
            <Button
                android:id="@+id/submit"
                android:layout_width="150dp"
                android:fontFamily="@font/mon_regular"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_marginStart="30dp"
                android:background="@drawable/trns_back_rect"
                android:layout_toEndOf="@id/image"
                android:layout_marginTop="70dp"
                android:hint="Ask For Help"
                android:textColorHint="#ff245c"
                android:textSize="15.5sp"
                />

            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="219dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="32dp"
                android:layout_toEndOf="@id/image"
                android:background="@drawable/trns_back"
                android:fontFamily="@font/mon_regular"
                android:padding="5dp"
                android:text="A+"
                android:textColor="#ff245c"
                android:textSize="18sp"
                android:textStyle="normal" />


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_below="@+id/submit"
                android:layout_marginTop="20dp"
                android:background="@drawable/gradient_rect"
                android:layout_height="30dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0dp"

                    android:fontFamily="@font/mon_regular"
                    android:gravity="center_vertical|center"
                    android:text="Last Date Of Donation : 28 Jan 2019"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </LinearLayout>



        </RelativeLayout>


    </>


</RelativeLayout>