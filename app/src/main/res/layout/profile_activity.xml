<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile"
    android:background="#303030"
    android:orientation="vertical">

<FrameLayout
android:layout_width="match_parent"
android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
       >




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"

            android:layout_alignParentStart="true"

            android:background="@drawable/profilebackgorund"
            android:orientation="vertical">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_profile"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="55dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:src="@drawable/plaementpro" />


            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text=""
                android:textColor="#fff"
                android:textSize="23sp"
                android:textStyle="bold" />


        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="290dp"
            android:layout_height="152dp"
            android:layout_marginTop="245dp"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="10dp"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent"

                android:baselineAligned="false">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Department"
                        android:textColor="#303030"
                        android:textSize="15sp"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="#09c6df"
                        android:text="BBA"
                        android:textStyle="bold"
                        android:padding="10dp"
                        android:id="@+id/dpart_profile"


                        />

                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cgpa"
                        android:textColor="#303030"
                        android:textSize="16sp"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="#09c6df"
                        android:text="3.70"
                        android:id="@+id/cgpa_card"
                        android:textStyle="bold"
                        android:padding="11dp"



                        />

                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Batch"
                        android:textColor="#303030"
                        android:textSize="16sp"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="#09c6df"
                        android:text="10th"
                        android:textStyle="bold"
                        android:padding="10dp"
                        android:gravity="center"
                        android:id="@+id/batch_card"
                        android:layout_gravity="center_horizontal"
                        />

                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <ImageButton
        android:layout_width="67dp"
        android:layout_height="70dp"
        android:layout_gravity="end"
        android:layout_marginTop="25dp"
        android:elevation="10dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/edit"
        android:foreground="?android:attr/selectableItemBackground"
       />



</FrameLayout>

<LinearLayout

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="15dp"


   >
    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

            <ImageView
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:src="@drawable/mail48"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rahatshovo56565@gmail.com"
            android:textColor="#ffff"
            android:paddingLeft="8dp"
            android:textSize="17dp"
            android:id="@+id/mail_profile"
            android:layout_gravity="center_vertical"/>


    </LinearLayout>
    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/bulephn96"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01516185792"
            android:textColor="#ffff"
            android:id="@+id/ph_profile"
            android:paddingLeft="8dp"
            android:textSize="17dp"
            android:layout_gravity="center_vertical"/>


    </LinearLayout>

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:src="@drawable/blood64"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B+"
            android:textColor="#ffff"
            android:paddingLeft="7dp"
            android:textSize="17dp"
            android:id="@+id/blood_profile"
            android:layout_gravity="center_vertical"/>


    </LinearLayout>

</LinearLayout>



</LinearLayout>