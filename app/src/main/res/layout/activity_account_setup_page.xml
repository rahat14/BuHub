<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#303030"

    tools:context=".accountSetupPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#303030"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:layout_gravity="center">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Your\n  Profile"
                android:textColor="#ffff"
                android:layout_marginStart="8dp"
                android:textSize="30sp"

                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:layout_marginTop="4dp"
                android:text="  2/2\nSteps"
                android:textColor="#ffff"
                android:textSize="18sp"

                />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageBtn"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="20dp"
                android:padding="25dp"
                android:src="@drawable/profile"
                android:clickable="true"

                android:foreground="?android:attr/selectableItemBackground"

                android:contentDescription="IMage"
                android:focusable="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=" Upload a Profile Picture\n(Click On The Icon To Upload)"
                android:textColor="#ffff"
                android:textSize="15dp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:text="Select Your Department"
                android:textColor="#ffff"
                android:textSize="17dp" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp">


            </Spinner>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/username_text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColorHint="#ffff"
                android:focusable="true"

                android:focusableInTouchMode="true"
                android:hint="  Enter Your Batch Number">

                <EditText
                    android:id="@+id/RegMail"
                    android:layout_width="220dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="25dp"
                    android:background="#55000000"
                    android:ems="10"

                    android:hint="  Enter Your Batch Number"
                    android:textColor="#ffff"
                    android:inputType="numberDecimal"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ex. 11 or 12 "
                    android:textColor="#ffff"
                    android:layout_marginStart="4dp"
                    />

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center|bottom">

            <CheckBox
                android:id="@+id/checkbox1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="I Want To Become A Blood Donor To Save LIfe "
                android:textColor="#fff"
                android:textSize="14sp"
                android:textStyle="bold" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/BGSelector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColorHint="#ffff"
                android:focusable="true"
                android:focusableInTouchMode="true"
              android:hint="   Your Blood Group">

                <EditText
                    android:id="@+id/BG"
                    android:layout_width="220dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="7dp"
                    android:background="#55000000"


                    android:hint="   Your Blood Group"
                    android:inputType="text"
                    android:textAllCaps="true"
                    android:textColor="#ffff"
                    android:textSize="14sp"
                    android:textStyle="bold" />


            </android.support.design.widget.TextInputLayout>

            <Button

                android:id="@+id/buttonComplete"
                android:layout_width="282dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:background="@drawable/gradient_1"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="Lets GO  "
                android:textColor="#fff"
                android:textStyle="bold"

                />

        </LinearLayout>
    </LinearLayout>

</ScrollView>




